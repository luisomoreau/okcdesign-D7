name = okcfoundation_theme
description = Resposive theme based on foundation
;screenshot = images/screenshot.png

core = 7.x
engine = phptemplate

; zurb foundation compiled css. Leave this in info file so that
; a sub theme may esaily override this to use its own app.css
stylesheets[all][] = css/app.css

; Modernizr acts as a shim for HTML5 elements for older browsers
; as well as detection for mobile devices.
scripts[] = foundation/bower_components/modernizr/modernizr.js
; Foundation framework scripts (minified)..
scripts[] = foundation/bower_components/foundation/js/foundation.min.js
scripts[] = js/app.js

theme_plugins[foundation_base] = plugins/foundation_base.php

